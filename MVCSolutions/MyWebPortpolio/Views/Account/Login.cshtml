@model MyWebPortpolio.Models.Account

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="container">
    <h2 style="font-weight:600; color:white">Login</h2>
    <div class="col-md-4 ml-auto mr-auto mt-2">
        <div class="card card-login card-plain">
            <form class="form" method="" action="">
                <div class="card-header text-center"></div>
                <div class="card-body">
                    <div class="input-group no-border input-lg">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="now-ui-icons users_circle-08"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control" placeholder="First Name...">
                    </div>
                    <div class="input-group no-border input-lg">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="now-ui-icons text_caps-small"></i>
                            </span>
                        </div>
                        <input type="text" placeholder="Last Name..." class="form-control" />
                    </div>
                </div>
                <div class="card-footer text-center" style="margin:5px 0 0 0">
                    <a href="#pablo" class="btn btn-primary btn-round btn-lg btn-block">Get Started</a>
                </div>
            </form>
        </div>
        <div>
            @if (ViewBag.Message != null)
            {
                <span>@ViewBag.Message</span>
            }
        </div>
    </div>
</div>
